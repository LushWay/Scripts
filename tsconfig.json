{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "ES2016",
      "ES2017.Date",
      "ES2017.Object",
      "ES2017.String",
      "ES2018.AsyncGenerator",
      "ES2018.Promise",
      "ES2018.Regexp",
      "ES2018.AsyncIterable",
      "ES2019.Array",
      "ES2019.Object",
      "ES2019.String",
      "ES2019.Symbol",
      "ES2020.Date",
      "ES2020.Number",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.Symbol.WellKnown",
      "ES2021.String"
    ],
    "types": [],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "baseUrl": "scripts/",
    "plugins": [
      {
        "name": "typescript-plugin-import-filter",
        "excludes": [
          { "module": "leafy-utils" },
          { "module": "@minecraft/vanilla-data" },
          { "module": "scripts/chestui/**" },
          { "module": "@sentry/**" }
        ]
      }
    ]
  },
  "include": ["scripts/"],
  "exclude": ["scripts/chestui", "scripts/@minecraft/", "@minecraft/vanilla-data", "node_modules"]
}
