{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "strictBindCallApply": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "lib": [
      "ES2016",
      "ES2017.Date",
      "ES2017.Object",
      "ES2017.String",
      "ES2018.AsyncGenerator",
      "ES2018.Promise",
      "ES2018.Regexp",
      "ES2018.AsyncIterable",
      "ES2019.Array",
      "ES2019.Object",
      "ES2019.String",
      "ES2019.Symbol",
      "ES2020.Date",
      "ES2020.Number",
      "ES2020.Promise",
      "ES2020.String",
      "ES2020.Symbol.WellKnown",
      "ES2021.String"
    ],
    "types": [],
    "sourceMap": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "outDir": "scripts",
    "baseUrl": "src/",
    "plugins": [
      {
        "name": "typescript-plugin-import-filter",
        "excludes": [
          { "module": "leafy-utils" },
          { "module": "src/chestui/**" },
          { "module": "@sentry/**" },
          { "module": "vm" },
          { "module": "readline" },
          { "module": "readline/promises" },
          { "module": "node:readline/promises" },
          { "module": "node:sea" },
          { "module": "console" },
          { "module": "events" },
          { "module": "process" },
          { "module": "net" },
          { "module": "module" },
          { "module": "tls2" },
          { "module": "tls" },
          { "module": "http**" },
          { "module": "assert" },
          { "module": "diagnostics_channel" },
          { "module": "buffer" },
          { "module": "node:stream/web" },
          { "module": "fs/promises" },
          { "module": "perf_hooks" },
          { "module": "dgram" },
          { "module": "trace_events" },
          { "module": "async_hooks" },
          { "module": "fs" },
          { "module": "tty" },
          { "module": "stream" },
          { "module": "stream/web" },
          { "module": "domain" },
          { "module": "zlib" },
          { "module": "v8" },
          { "module": "dns" },
          { "module": "worker_threads" },
          { "module": "os" },
          { "module": "source-map-js" },
          { "module": "dns/promises" },
          { "module": "util" },
          { "module": "node:" },
          { "module": "node:test" },
          { "module": "crypto" },
          { "module": "src/test/__mocks__" },
          { "module": "vitest/dist/**" }
        ]
      }
    ]
  },
  "include": ["src", "tools/defines.d.ts", "src/modules/places/tech-city/engineer.ts"],
  "exclude": ["node_modules", "src/chestui", "src/test/**", "vitest/dist/**", "scripts/**"],

  // Pollutes global
  "references": [{ "path": "./tsconfig.test.json" }, { "path": "./tsconfig.spec.json" }]
}
