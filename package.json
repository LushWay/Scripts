{
  "name": "scripts",
  "version": "0.17.87",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "lint": "eslint ./scripts/ --fix --plugin file-progress --rule 'file-progress/activate: 1'",
    "patch-modules": "node tools/patch-modules.js"
  },
  "dependencies": {
    "@minecraft/common": "1.1.0",
    "@minecraft/server": "1.8.0-beta.1.20.50-stable",
    "@minecraft/server-admin": "1.0.0-beta.1.20.50-stable",
    "@minecraft/server-gametest": "1.0.0-beta.1.20.50-stable",
    "@minecraft/server-net": "1.0.0-beta.1.20.50-stable",
    "@minecraft/server-ui": "1.2.0-beta.1.20.50-stable",
    "@minecraft/vanilla-data": "1.20.50"
  },
  "resolutions": {
    "@minecraft/common": "1.1.0",
    "@minecraft/server": "1.8.0-beta.1.20.50-stable",
    "@minecraft/server-admin": "1.0.0-beta.1.20.50-stable",
    "@minecraft/server-gametest": "1.0.0-beta.1.20.50-stable",
    "@minecraft/server-net": "1.0.0-beta.1.20.50-stable",
    "@minecraft/server-ui": "1.2.0-beta.1.20.50-stable",
    "@minecraft/vanilla-data": "1.20.50"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-file-progress": "^1.3.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-scriptapi": "file:tools/eslint-plugin",
    "leafy-utils": "^6.6.4",
    "typescript": "5.3",
    "typescript-plugin-import-filter": "^0.2.0"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "semi": false,
    "printWidth": 120,
    "endOfLine": "crlf",
    "quoteProps": "consistent"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "scriptapi"
    ],
    "settings": {
      "scriptapi/no-cycle": {
        "maxDepth": 20
      }
    },
    "parser": "@typescript-eslint/parser",
    "rules": {
      "no-empty": "off",
      "no-console": "off",
      "no-undef": "off",
      "prefer-const": "warn",
      "scriptapi/no-cycle": "error",
      "scriptapi/ensure-modules": "error",
      "scriptapi/no-unsupported-features": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-types": "warn",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/naming-convention": [
        "warn",
        {
          "selector": "default",
          "format": [
            "camelCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": [
            "objectLiteralMethod",
            "objectLiteralProperty"
          ],
          "format": null,
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": [
            "enumMember"
          ],
          "format": [
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "function",
          "format": [
            "camelCase",
            "PascalCase"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "variable",
          "format": [
            "camelCase",
            "PascalCase",
            "UPPER_CASE"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "variable",
          "modifiers": [
            "exported",
            "const"
          ],
          "format": [
            "UPPER_CASE"
          ],
          "leadingUnderscore": "allow",
          "trailingUnderscore": "allow"
        },
        {
          "selector": "typeLike",
          "format": [
            "PascalCase"
          ]
        }
      ]
    },
    "ignorePatterns": [
      "tools/*",
      "scripts/lib/Assets/*"
    ],
    "root": true
  },
  "packageManager": "yarn@4.0.2",
  "workspaces": {
    "packages": [
      "tools/eslint-plugin"
    ]
  }
}
